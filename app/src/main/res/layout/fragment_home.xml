<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewLive"
        android:layout_width="212dp"
        android:layout_height="183dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewTempLabel"
        android:layout_width="109dp"
        android:layout_height="27dp"
        android:text="Temperature: "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="41dp"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTempLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewTempLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewTempLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewHumidityLabel"
        android:layout_width="84dp"
        android:layout_height="27dp"
        android:text="Humidity:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTempLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTempLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/textViewMoistureLabel"
        android:layout_width="83dp"
        android:layout_height="28dp"
        android:text="Moisture:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTempLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTempLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/textViewLightLabel"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:text="Light: "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTempLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTempLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHumidityLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewHumidityLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewHumidityLabel"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/tvMoisture"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMoistureLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewMoistureLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewMoistureLabel"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvLight"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLightLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewLightLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewLightLabel"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/pumpCard"
        android:layout_width="392dp"
        android:layout_height="141dp"
        android:layout_gravity="start"
        android:background="@drawable/border_rec"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLive"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/fanCard"
        android:layout_width="393dp"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:background="@drawable/border_rec"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pumpCard"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/timelapseCard"
        android:layout_width="392dp"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:background="@drawable/border_rec"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fanCard"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Pump"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pumpCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pumpCard"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textViewTempLabel5"
        android:layout_width="155dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:text="Time watered last:  "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/pumpCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.05" />

    <ToggleButton
        android:id="@+id/pumpToggle"
        android:layout_width="361dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/pumpCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pumpCard"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/switchAutoPump"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:text="Auto"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/pumpCard"
        app:layout_constraintTop_toTopOf="@+id/pumpCard"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Fan"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fanCard"
        app:layout_constraintEnd_toEndOf="@+id/fanCard"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fanCard"
        app:layout_constraintVertical_bias="0.082" />

    <Switch
        android:id="@+id/switchAutoFan"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:text="Auto"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/pumpCard"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Timelapse"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timelapseCard"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timelapseCard"
        app:layout_constraintVertical_bias="0.031" />

    <Switch
        android:id="@+id/switchAutoTimelapse"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:text="Auto"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/fanCard"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/timelapseToggle"
        android:layout_width="369dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/timelapseCard"
        app:layout_constraintEnd_toEndOf="@+id/timelapseCard"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timelapseCard"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewLastWatered"
        android:layout_width="176dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTempLabel5"
        app:layout_constraintEnd_toEndOf="@+id/pumpCard"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toEndOf="@+id/textViewTempLabel5"
        app:layout_constraintTop_toTopOf="@+id/textViewTempLabel5"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/fanToggle"
        android:layout_width="363dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/fanCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
